#parse("sys_param.vm")

<div class="searchArea">
    <button class="btn btn-default btn-xs pull-right" onclick="goAdditifBack('$!{request.getParameter('from')}')"><i class="iconfont icon-left"></i>返回</button>
</div>

<div class="gallery clearfix additifTicketList" style="margin-top: 0px;">

</div>


<div class="modal fade" id="detail" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">

    <div class="modal-dialog paginationDiv">

        <form id="additifTicketForm" action="$!{CONTEXT_PATH}/ledgerAdditif/ticketDetailList" method="post">
            <input type="hidden" name="ledgerId" value="">
            <input type="hidden" name="fileId" value="">
        </form>

        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">
                    添加剂使用台账明细
                </h4>
            </div>
            <div class="modal-body">
                <div class="table_area table-responsive cell ">
                    <div class="queryResultList" id="queryResultList">
                    </div>
                </div>
                <div class="modal-footer">
                    #paginationDiv()
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal -->
    </div>
</div>
<!--相册功能-->
<div class="modal fade pic" id="pic" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <img src="" alt="票证图片" />
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal -->
</div>

<script type="text/javascript">
    function goAdditifBack(from) {
        // 列表页
        if(from == 'l') {
            loadLedger('additifTab', '$!{CONTEXT_PATH}/company/ledgerIndex?type=11')
        }
        // 明细页
        else if (from == 'd') {
            loadLedger('additifTab', '$!{CONTEXT_PATH}/company/ledgerDetail?lid=$!{request.getParameter("lid")}')
        }
    }

    $(function() {
        // 查询票证列表
        var path = '$!{CONTEXT_PATH}/ledgerAdditif/ticketList?additifId=$!{request.getParameter("pid")}&ledgerId=$!{request.getParameter("lid")}';
        $('.additifTicketList').load(path);

        // 点击查看大图时，设置图片链接
        $('#pic').on('show.bs.modal', function (e) {
            var invoker = $(e.relatedTarget);

            var src = invoker.parent().find('img').attr('src');
            $(this).find('img').attr('src', src);
        });

        $('#detail').on('show.bs.modal', function (e) {
            var invoker = $(e.relatedTarget);

            var fid = invoker.attr('fid');
            var lid = $('.additifTicketList').find('#in_ledgerId').val();

            $('#additifTicketForm').find('input[name="ledgerId"]').val(lid);
            $('#additifTicketForm').find('input[name="fileId"]').val(fid);

            qryData('additifTicketForm');
        });
    });
</script>